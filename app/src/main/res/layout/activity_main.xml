<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android = "http://schemas.android.com/apk/res/android"
    xmlns:tools = "http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EDEEEF"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="邢菲菲 03195020"></TextView>

        <EditText
            android:id="@+id/et_all"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="1.5dp"
            android:background="@null"
            android:gravity="right|bottom"
            android:textColor="#000000"
            android:textSize="40dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">
        <Button
            android:id = "@+id/btleft"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="("
            android:background="#F8F8F8"
            android:textColor = "#626262"
            android:layout_margin="2dp">
        </Button>
        <Button
            android:id = "@+id/btright"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text=")"
            android:background="#F8F8F8"
            android:textColor = "#626262"
            android:layout_margin="2dp">
        </Button>
        <Button
            android:id = "@+id/btback"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="Backspace"
            android:background="#F8F8F8"
            android:textColor = "#626262"
            android:layout_margin="2dp">
        </Button>
        <Button
            android:id = "@+id/btC"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="C"
            android:background="#F8F8F8"
            android:textColor = "#626262"
            android:layout_margin="2dp">
        </Button>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">
        <Button
            android:id = "@+id/bt7"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="7"
            android:background="#FDFDFD"
            android:textColor = "#626262"
            android:layout_margin="2dp">
        </Button>
        <Button
            android:id = "@+id/bt8"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="8"
            android:background="#FDFDFD"
            android:textColor = "#626262"
            android:layout_margin="2dp">
        </Button>
        <Button
            android:id = "@+id/bt9"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="9"
            android:background="#FDFDFD"
            android:textColor = "#626262"
            android:layout_margin="2dp">
        </Button>
        <Button
            android:id = "@+id/btchu"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="÷"
            android:background="#F8F8F8"
            android:textColor = "#626262"
            android:layout_margin="2dp">
        </Button>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">
        <Button
            android:id = "@+id/bt4"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="4"
            android:background="#FDFDFD"
            android:textColor = "#626262"
            android:layout_margin="2dp">
        </Button>
        <Button
            android:id = "@+id/bt5"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="5"
            android:background="#FDFDFD"
            android:textColor = "#626262"
            android:layout_margin="2dp">
        </Button>
        <Button
            android:id = "@+id/bt6"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="6"
            android:background="#FDFDFD"
            android:textColor = "#626262"
            android:layout_margin="2dp">
        </Button>
        <Button
            android:id = "@+id/btcheng"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="×"
            android:background="#F8F8F8"
            android:textColor = "#626262"
            android:layout_margin="2dp">
        </Button>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">
        <Button
            android:id = "@+id/bt1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="1"
            android:background="#FDFDFD"
            android:textColor = "#626262"
            android:layout_margin="2dp">
        </Button>
        <Button
            android:id = "@+id/bt2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="2"
            android:background="#FDFDFD"
            android:textColor = "#626262"
            android:layout_margin="2dp">
        </Button>
        <Button
            android:id = "@+id/bt3"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="3"
            android:background="#FDFDFD"
            android:textColor = "#626262"
            android:layout_margin="2dp">
        </Button>
        <Button
            android:id = "@+id/btjian"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="-"
            android:background="#F8F8F8"
            android:textColor = "#626262"
            android:layout_margin="2dp">
        </Button>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">
        <Button
            android:id = "@+id/btdian"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="."
            android:background="#F8F8F8"
            android:textColor = "#626262"
            android:layout_margin="2dp">
        </Button>
        <Button
            android:id = "@+id/bt0"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="0"
            android:background="#F8F8F8"
            android:textColor = "#626262"
            android:layout_margin="2dp">
        </Button>
        <Button
            android:id = "@+id/btdengyu"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="="
            android:background="#AFAEAD"
            android:textColor = "#626262"
            android:layout_margin="2dp">
        </Button>
        <Button
            android:id = "@+id/btjia"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="+"
            android:background="#F8F8F8"
            android:textColor = "#626262"
            android:layout_margin="2dp">
        </Button>
    </LinearLayout>

</LinearLayout>